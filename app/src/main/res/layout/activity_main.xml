        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143" />

    <Button
        android:id="@+id/but4"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/but5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/but5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/but6"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="216dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@+id/subtract"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subtract"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/but5"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="116dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/but6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/but6"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/but8"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:text="8"
        app:layout_constraintBottom_toBottomOf="@+id/but9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/but9"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/but7"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@+id/but8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/but8"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/but9"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="8dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@+id/multiply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/multiply"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/butdec"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="."
        app:layout_constraintBottom_toBottomOf="@+id/but0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/but0"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/but0"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/buteq"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buteq"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/but1"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/but2"
        app:layout_constraintEnd_toStartOf="@+id/but2"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/but2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buteq"
        android:layout_width="82dp"
        android:layout_height="42dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="8dp"
        android:text="="
